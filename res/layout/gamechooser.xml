<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent" android:weightSum="1">

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="5x5 - easy"
              android:textSize="40sp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5.1"
                    android:text="1"
                    android:onClick="levelChosen"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5.2"
                    android:text="2"
                    android:onClick="levelChosen"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5.3"
                    android:text="3"
                    android:onClick="levelChosen"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5.4"
                    android:text="4"
                    android:onClick="levelChosen"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5.5"
                    android:text="5"
                    android:onClick="levelChosen"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5.6"
                    android:text="6"
                    android:onClick="levelChosen"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5.7"
                    android:text="7"
                    android:onClick="levelChosen"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5.8"
                    android:text="8"
                    android:onClick="levelChosen"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5.9"
                    android:text="9"
                    android:onClick="levelChosen"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5.10"
                    android:text="10"
                    android:onClick="levelChosen"/>
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="6x6 - medium"
              android:textSize="40sp"/>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="6.1"
                    android:text="1"
                    android:onClick="levelChosen"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="6.2"
                    android:text="2"
                    android:onClick="levelChosen"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="6.3"
                    android:text="3"
                    android:onClick="levelChosen"/>

        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="7x7 - hard"
              android:textSize="40sp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="7.1"
                    android:text="1"
                    android:onClick="levelChosen"/>
    </LinearLayout>
</LinearLayout>