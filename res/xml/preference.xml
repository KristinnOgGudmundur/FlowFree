<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:title="Sound and vibrations">
        <CheckBoxPreference
                android:defaultValue="true"
                android:key="sounds"
                android:title="Sounds"
                android:summary="Enable sounds">
        </CheckBoxPreference>
        <CheckBoxPreference
                android:defaultValue="true"
                android:key="vibrations"
                android:title="Vibrations"
                android:summary="Enable vibrations">
        </CheckBoxPreference>
		<CheckBoxPreference
				android:defaultValue="false"
				android:key="ColorBlindMode"
				android:title="ColorBlindMode"
				android:summary="Colorblind mode">
		</CheckBoxPreference>
    </PreferenceCategory>
    <PreferenceCategory
            android:title="Reset">
        <Preference android:title="Reset"
                    android:key="reset"
                    android:summary="Reset all progress"/>
    </PreferenceCategory>
</PreferenceScreen>